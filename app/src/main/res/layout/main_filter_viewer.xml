<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="mainFilterData"
            type="com.example.oneplusone.model.data.MainFilterData" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@drawable/filter_border"
        android:id="@+id/main_filter">


        <ImageView
            android:id="@+id/main_filter_image"

            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"

            android:src="@drawable/emar_24_log_2"
            app:layout_constraintBottom_toTopOf="@id/main_filter_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/scdream5"
            android:paddingBottom="3dp"
            android:text="편의점 전체"
            android:textColor="#000000"

            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/main_filter_image"
            app:layout_constraintStart_toStartOf="@id/main_filter_image"
            app:layout_constraintTop_toBottomOf="@id/main_filter_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>