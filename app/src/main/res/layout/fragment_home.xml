<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">
    <data>
        <variable
            name="filterDataViewModel"
            type="com.example.oneplusone.model.FilterDataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E3E3"
        android:id="@+id/homeFragment">

        <TextView
            android:id="@+id/product_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="상품 필터"
            android:fontFamily="@font/scdream6"
            android:textColor="#000000"
            android:textSize="16dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/product_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_filter" />


        <ImageView
            android:id="@+id/convenience_store_filter"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/filter_border"

            android:src="@drawable/all_convenience_store"
            app:layout_constraintBottom_toTopOf="@id/convenience_store_filter_text"
            app:layout_constraintStart_toStartOf="@id/product_filter_bar"
            app:layout_constraintTop_toTopOf="@id/product_filter_bar"
            android:onClick="@{() -> filterDataViewModel.convenienceStoreFilterClick()}"
            />

        <TextView
            android:id="@+id/convenience_store_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/scdream5"
            android:paddingBottom="3dp"
            android:text="편의점 전체"
            android:textColor="#000000"
            android:textSize="10sp"

            app:layout_constraintBottom_toBottomOf="@id/product_filter_bar"
            app:layout_constraintEnd_toEndOf="@id/convenience_store_filter"
            app:layout_constraintStart_toStartOf="@id/convenience_store_filter"
            app:layout_constraintTop_toBottomOf="@id/convenience_store_filter" />

        <ImageView
            android:id="@+id/product_category_filter"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/filter_border"

            android:src="@drawable/all_product_category"
            app:layout_constraintBottom_toTopOf="@id/product_category_filter_text"
            app:layout_constraintStart_toEndOf="@id/convenience_store_filter"
            app:layout_constraintTop_toTopOf="@id/product_filter_bar"
            android:onClick="@{() -> filterDataViewModel.productCategoryFilterClick()}"/>

        <TextView
            android:id="@+id/product_category_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/scdream5"
            android:paddingBottom="3dp"
            android:text="모든 상품"
            android:textColor="#000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/product_filter_bar"
            app:layout_constraintEnd_toEndOf="@id/product_category_filter"
            app:layout_constraintStart_toStartOf="@id/product_category_filter"
            app:layout_constraintTop_toBottomOf="@id/product_category_filter" />

        <ImageView
            android:id="@+id/product_benefits_filter"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/filter_border"

            android:src="@drawable/all_benefits"
            app:layout_constraintBottom_toTopOf="@id/product_benefits_filter_text"
            app:layout_constraintStart_toEndOf="@id/product_category_filter"
            app:layout_constraintTop_toTopOf="@id/product_filter_bar"
            android:onClick="@{() -> filterDataViewModel.productBenefitsFilterClick()}"/>

        <TextView
            android:id="@+id/product_benefits_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/scdream5"
            android:paddingBottom="3dp"
            android:text="모든 행사"
            android:textColor="#000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/product_filter_bar"
            app:layout_constraintEnd_toEndOf="@id/product_benefits_filter"
            app:layout_constraintStart_toStartOf="@id/product_benefits_filter"
            app:layout_constraintTop_toBottomOf="@id/product_benefits_filter" />


        <ImageView
            android:id="@+id/filter_bar_detail"
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:layout_marginTop="5dp"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_filter_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/filter_bar_detail"
            app:layout_constraintEnd_toEndOf="@id/filter_bar_detail"
            app:layout_constraintStart_toStartOf="@id/filter_bar_detail"
            app:layout_constraintTop_toTopOf="@id/filter_bar_detail"
            items="@{filterDataViewModel.filterDataList}"
            />


