<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/custom_marker_viewer"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/custom_marker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="50dp"



        android:fontFamily="@font/scdream5"
        android:text="GS25 ㅇㅇ점"
        android:textSize="11sp"
        android:background="@drawable/convenience_info_border2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/custom_marker_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingBottom="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/gs25_product_icon"

        app:layout_constraintBottom_toBottomOf="@id/custom_marker_text"
        app:layout_constraintStart_toStartOf="@id/custom_marker_text"
        app:layout_constraintTop_toTopOf="@id/custom_marker_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>